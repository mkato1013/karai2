<%= render "shared/header2" %>

<div class="new-food-contents">
  <div class="new-food-main">
    <h2 class="new-food-title">YOUR KARAI</h2>
      <%= form_with model: @food, local: true do |f| %>
        <div class="new-food-post">
          <%= render 'shared/error_messages', model: f.object %>

          <%# 食べ物画像 %>
          <div class="img-upload">
            <div class="new-food-img">
              <h2 class="new-img-contents-title">KARAI写真</h2>
              <%# <span class="indispensable">必須</span> %>
              <label class="new-click-upload">
                <%= f.file_field :image, class:"new-food-image-text", type:"file" %>ファイルを選択
              </label>
            </div>
              <%= image_tag @food.image, class: 'food-image' if @food.image.attached? %>
          </div>
          <%# /食べ物画像 %>

          <%# 食べ物の種類 %>
          <div class="meal-type">
            <div class="new-meal-type-category">
              <h2 class="new-img-contents-title">カテゴリー</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.collection_select(:meal_type_id, MealType.all, :id, :name, {}, {class:"new-meal-type-category-text"}) %>
            </div>
          </div>
          <%# /食べ物の種類 %>

          <%# 店名 %>
          <div class="shop-name-all">
            <div class="new-shop-name">
              <h2 class="new-img-contents-title">店名</h2>
              <%# <span class="indispensable">必須</span> %>
              <%= f.text_area :shop_name, class:"new-shop-name-text", id:"shop-name", placeholder:"（40文字以内)", maxlength:"40" %>
            </div>
          </div>
          <div class="shop-name-kana-all">
            <div class="new-shop-name-kana">
              <h2 class="new-img-contents-title">読み方</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.text_area :shop_name_kana, class:"new-shop-name-kana-text", id:"shop-name-kana", placeholder:"（100文字以内)", maxlength:"100" %>
            </div>
          </div>
          <%# /店名 %>

          <%# メニュー名 %>
          <div class="food-name-all">
            <div class="new-food-name">
              <h2 class="new-img-contents-title">メニュー名</h2>
              <%# <span class="indispensable">必須</span> %>
              <%= f.text_area :food_name, class:"new-food-name-text", id:"food-name", placeholder:"（100文字以内)", maxlength:"100" %>
            </div>
          </div>
          <%# /店名とメニュー名 %>

          <%# 辛さレベル %>
          <div class="spicy-level">
            <div class="new-spicy-level-category">
              <h2 class="new-img-contents-title">辛さ採点</h2>
              <%# <span class="indispensable">必須</span> %>
              <%= f.collection_select(:spicy_level_id, SpicyLevel.all, :id, :name, {}, {class:"new-spicy-level-category-text"}) %>
            </div>
          </div>
          <%# /辛さレベル %>

          <%# 最寄り駅 %>
          <div class="shop-station">
            <div class="new-shop-nearest-station">
              <h2 class="new-img-contents-title">最寄り駅</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.text_area :station, class:"new-shop-station-text", id:"station", placeholder:"「駅」は除いてOK！", maxlength:"40" %>
            </div>
          </div>
          <%# /最寄り駅 %>

          <%# 雰囲気 %>
          <div class="shop-mood">
            <div class="new-shop-mood-category">
              <h2 class="new-img-contents-title">店内の雰囲気</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.collection_select(:shop_mood_id, ShopMood.all, :id, :name, {}, {class:"new-shop-mood-category-text"}) %>
            </div>
          </div>
          <%# /雰囲気 %>

          <%# 待ち時間 %>
          <div class="waiting-time">
            <div class="new-waiting-time-category">
              <h2 class="new-img-contents-title">待ち時間</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.collection_select(:waiting_time_id, WaitingTime.all, :id, :name, {}, {class:"new-waiting-time-category-text"}) %>
            </div>
          </div>
          <%# /雰囲気 %>

          <%# コメント欄 %>
          <div class="food-comment">
            <div class="new-food-comment">
              <h2 class="new-img-contents-title">コメント</h2>
              <%# <span class="optional">任意</span> %>
              <%= f.text_area :food_comment, class:"new-food-comment-text", id:"food-comment", placeholder:"感想（1,000文字以内）（味、値段、他のメニューなど）" ,rows:"7" ,maxlength:"1000" %>
            </div>
          </div>
          <%# /コメント %>
        </div>

        <%# 下部ボタン %>
        <div class="postfood-btn-contents">
          <%= f.submit "投稿" ,class:"new-postfood-btn" %>
        </div>
        <%# /下部ボタン %>
      <% end %>
  </div>
</div>

<%= render "shared/main_menu" %>

<%= render "shared/footer" %>