<%= render "shared/header" %>

<div class="main">
  <div class="food-contents">
  <h2 class="food-contents-title">検索結果</h2>
    <ul class="food-lists">
      <% @foods.each do |food| %>
        <li class="list">
          <div class="food-img-content">
          <%= link_to root_path do %>
            <%= image_tag food.image, class: "food-img" if food.image.attached? %>
            <div class="food-img-info">
              <h2 class="shop-name">
              <%= food.shop_name%>
              </h2>
              <h2 class="food-name">
              <%= food.food_name%>
              </h2>
              <h3 class="food-spicylevel">
              <%= food.spicy_level.name%>
              </h3>
            </div>
          <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<%= render "shared/main_menu" %>

<%# 下部ボタン %>
    <div class="postfood-btn-contents">
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
<%# /下部ボタン %>