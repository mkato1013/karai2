<h2 class="food-likes-index">KALIKE
  <%= food.likes.count %>
</h2>
<% if user_signed_in? %>
  <% if current_user.already_liked?(food) %>
    <%= link_to "いいねを取り消す", food_likes_path(food,@like), method: :delete, remote: true %>
  <% else %>
    <%= link_to "いいね", food_likes_path(food), method: :post, remote: true %>
  <% end %>
<% end %>