<h2 class="mypage-following">フォロー
  <%= link_to @user.followings.count, followings_user_path(@user) %>
</h2>
<h2 class="mypage-follower">フォロワー
  <%= link_to @user.followers.count, followers_user_path(@user) %>
</h2>

<div class="mypage-follow-btn">
  <% unless @user == current_user %>
    <% if @user.is_followed_by?(current_user) %>
      <%= link_to user_relationships_path(@user), method: :delete, remote: true do %>
        <button class="btn btn-danger">フォロー解除</button>
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(@user), method: :post, remote: true do %>
        <button class="btn btn-primary">フォロー</button>
      <% end %>
    <% end %>
  <% end %>
</div>